{
"compilerOptions": {
    "resolveJsonModule": true,
    "target": "ES2020",
    "module": "CommonJS",
    "allowJs": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "checkJs": false,
    "moduleResolution": "node"
  },
  "include": [
    "**/*.ts",
    "**/*.js"
  ],
  "exclude": ["node_modules", "dist"]
}